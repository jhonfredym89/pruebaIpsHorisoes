<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>prueba</artifactId>
		<groupId>com.ipshorisoes</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<groupId>${group.id.project}</groupId>
	<artifactId>prueba-ear</artifactId>
	<version>${version.project}</version>
	<packaging>ear</packaging>
	<name>${name.project}-ear</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${version.java}</source>
					<target>${version.java}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.8</version>
				<configuration>
					<applicationName>${name.project}</applicationName>
					<displayName>${name.project}</displayName>
					<version>6</version>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<modules>
						<jarModule>
							<groupId>com.ipshorisoes</groupId>
							<artifactId>prueba-dm</artifactId>
						</jarModule>
						<jarModule>
							<groupId>com.ipshorisoes</groupId>
							<artifactId>prueba-persistencia</artifactId>
						</jarModule>
						<ejbModule>
							<groupId>com.ipshorisoes</groupId>
							<artifactId>prueba-negocio</artifactId>
						</ejbModule>
						<webModule>
							<groupId>com.ipshorisoes</groupId>
							<artifactId>prueba-web</artifactId>
							<contextRoot>/</contextRoot>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.ipshorisoes</groupId>
			<artifactId>prueba-negocio</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>com.ipshorisoes</groupId>
			<artifactId>prueba-persistencia</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>com.ipshorisoes</groupId>
			<artifactId>prueba-web</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>com.ipshorisoes</groupId>
			<artifactId>prueba-dm</artifactId>
			<version>${version-project}</version>
		</dependency>
	</dependencies>

</project>
